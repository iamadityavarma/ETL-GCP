# Dockerfile for Data Loader
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY data_loader.py .

# Note: .env file is NOT copied - environment variables come from GCP Secret Manager or Cloud Run/GKE config

# Run the loader
CMD ["python", "data_loader.py"]
